{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSources": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": ".js",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "types": ["reflect-metadata"]
  },
  "exclude": [
    "node_modules"
  ]
}
