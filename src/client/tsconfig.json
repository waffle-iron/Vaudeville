{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": ".js",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es7"
    ],
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "reflect-metadata",
      "isomorphic-fetch",
      "webpack-env"
      ]
  },
  "include": [
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
