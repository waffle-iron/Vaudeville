{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 5858,
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true,
            "outFiles": [
              "${workspaceRoot}/src/server/.js/**/*.js"
            ]
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "url": "http://localhost:8081",
            "webRoot": "${workspaceRoot}",
            "diagnosticLogging": true,
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        }
    ],
    "compounds": [
	      {
	        "name": "Hybrid",
	        "configurations": ["Node", "Chrome"]
	      }
      ]
}